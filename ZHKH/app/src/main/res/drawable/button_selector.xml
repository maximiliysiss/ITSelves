<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="3dp" android:top="3dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#A382D8" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#D168E9" android:startColor="#7E3897" />
                    <stroke android:width="1dp" android:color="#934CB1" />
                    <corners android:radius="2dp" />
                    <padding android:bottom="5dp" android:left="5dp"
                        android:right="5dp" android:top="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>